@model Product
<div class="card shadow border-0 my-4">
	<div class="card card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post">
			<input asp-for="productID" hidden />
			<div class="border p-3 mt-4">
				<div class="row pb-2">
					<h2 class="text-primary">Delete Product</h2>
				</div>
				@* <div asp-validation-summary="All"></div> *@
				<div class="form-floating py-2 col-12">
					<input asp-for="titleProduct" type="text" disabled class="form-control border-0 shadow" />
					<label asp-for="titleProduct" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="productDecsciption" type="text" disabled class="form-control border-0 shadow" />
					<label asp-for="productDecsciption" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="ISBN" type="text" disabled class="form-control border-0 shadow" />
					<label asp-for="ISBN" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="listPrice" type="text" disabled class="form-control border-0 shadow" />
					<label asp-for="listPrice" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="priceProduct" type="text" disabled class="form-control border-0 shadow" />
					<label asp-for="priceProduct" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="priceProductFor50" type="text" disabled class="form-control border-0 shadow" />
					<label asp-for="priceProductFor50" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="priceProductFor100" type="text" disabled class="form-control border-0 shadow" />
					<label asp-for="priceProductFor100" class="ms-2"></label>
				</div>
				<div class="row">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-danger form-control">Delete</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">
							Back to List
						</a>
					</div>
				</div>

			</div>
		</form>
	</div>
</div>
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}