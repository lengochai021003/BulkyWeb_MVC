@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel
<div class="container">
	<div class="row pt-4 pb-3" >
		<div class="col-6">
			<h2 class="text-dark">
				Category list
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="/categories/create"  class="btn btn-dark"><i class="bi bi-plus-circle"></i> Create new category</a>
		</div>
	</div>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Category Name</th>
			<th>Display Order</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model.CategoryList.OrderBy(u=>u.DisplayOrder))
		{
			<tr>
				<td>@obj.CategoryName</td>
				<td>@obj.DisplayOrder</td>
				<td>
					<div class="w-75 btn-group" role="group">
							<a asp-page="/categories/edit" asp-route-id="@obj.CategoryId" class="btn btn-dark"><i class="bi bi-pencil-square"></i> Edit</a>
							<a asp-page="/categories/delete" asp-route-id="@obj.CategoryId" class="btn btn-danger"><i class="bi bi-trash3"></i> Delete</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
</div>